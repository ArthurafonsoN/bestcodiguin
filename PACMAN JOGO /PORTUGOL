programa {
  funcao inicio() {
   
    cadeia mapa[12][12]
    inteiro linha=0, coluna=0
    inteiro ultimaLinha=0, ultimaColuna=0
    caracter direcao
    inteiro pontos = 0


    //Preenchendo a mapa de jogo com zeros
    para (inteiro i=0; i<10; i++){
      para (inteiro j=0; j<10; j++){
        mapa[i][j] = "|"
      }
    }
    //Criando posicoes para os obstaculos
    mapa[0][4] = "ðŸŽ"
    mapa[1][2] = "ðŸŽ"
    mapa[2][7] = "ðŸŽ"
    mapa[3][6]=  "ðŸŽ"
    mapa[4][2] = "ðŸŽ"
    mapa[5][4]=  "ðŸŽ"
    mapa[6][3]=  "ðŸŽ"
    mapa[7][5]=  "ðŸŽ"
    mapa[8][2]=  "ðŸŽ"
    mapa[9][6]=  "ðŸŽ"
   
    //Definindo a posicao inicial da personagem
    mapa[0][0]= "ðŸŸ¡â—½â—½â—½â—½"


    //Mostrando a versÃ£o inicial do mapa
    para (inteiro i=0; i<10; i++){
      para (inteiro j=0; j<10; j++){
        escreva(mapa[i][j], " ")
      }
      escreva("\n")
    }    


    //Lendo um comando para movimentar a personagem
    enquanto(verdadeiro){
      escreva("Mova com W , A , S , D: ")
      leia(direcao)
      limpa()


      //Verificando qual tecla foi pressionada
      escolha(direcao){
        caso "s":
          se (linha + 1 < 10){
            linha++
            pontos += 100
          }
          pare
         
        caso "a":
          se (coluna - 1 >= 0){
            coluna--
            pontos += 100
          }
          pare
         
        caso "w":
          se (linha - 1 >= 0){
            linha--
            pontos += 100
          }
          pare
         
        caso "d":
          se (coluna + 1 < 10){
            coluna++
            pontos += 100
          }
          pare
         
        caso contrario:
          pare
      }
     
      //Verificando colisÃ£o0
      se (mapa[linha][coluna] == "ðŸŽ"){
        escreva("VocÃª colidiu! PontuaÃ§Ã£o final: ", pontos)
        pare
      }
     
      //Memorizando qual foi a Ãºltima posiÃ§Ã£o que a personagem esteve
      mapa[ultimaLinha][ultimaColuna]="_"
     
      //Definindo a nova posiÃ§Ã£o da personagem no mapa
      mapa[linha][coluna]="ðŸŸ¡â—½â—½â—½â—½"
     
      //Exibindo o mapa de jogo atualizado
      para (inteiro i=0; i<10; i++){
       para (inteiro j=0; j<10; j++){
          escreva(mapa[i][j], " ")
       }
       escreva("\n")
      }
     
      ultimaLinha=linha
      ultimaColuna=coluna
    }
  }
}
